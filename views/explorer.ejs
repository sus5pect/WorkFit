<script>
    function inc(filename){
        var xhttp = new XMLHttpRequest();
        xhttp.open("GET","like/"+filename,false)
        xhttp.send();
        let x = document.getElementById('b'+filename);
        x.innerText = parseInt(x.innerText)+1;
    }
</script>